{
	"$schema": "https://schema.management.azure.com/schemas/2021-09-09/uiFormDefinition.schema.json",
	"view": {
		"kind": "Form",
		"properties": {
			"title": "Volumez demo on Azure",
			"steps": [
				{
					"name": "basics",
					"label": "Basics",
					"elements": [
						{
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope",
                            "location": {
                                "resourceTypes": [
                                    "microsoft.resources/resourcegroups"
                                ]
                            }
                        },
						{
							"name": "adminPassword",
							"type": "Microsoft.Common.PasswordBox",
							"label": "Password for your volumezdemoUser"
						},
						{
							"name": "tenant_token",
							"type": "Microsoft.Common.TextBox",
							"label": "You can find your tenant_token in the Volumez developer info"
						},
						{
							"name": "deployBastion",
							"type": "Microsoft.Common.DropDown",
							"label": "Deploy a Bastion Host",
							"multiselect": false,
							"multiLine": false,
							"constraints": {
								"allowedValues": [
								  {
									"label": "True",
									"value": "true" 
								  },
								  {
									"label": "False",
									"value": "false"
								  }
								],
								"required": true
							  }		
						},
                                                {
                                                        "name": "deploySize",
                                                        "type": "Microsoft.Common.DropDown",
                                                        "label": "Size of your demo",
                                                        "multiselect": false,
                                                        "multiLine": false,
                                                        "constraints": {
                                                                "allowedValues": [
                                                                  {
                                                                        "label": "Small: 2 X Standard_L8as_v3",
                                                                        "value": "Small"
                                                                  },
                                                                  {
                                                                        "label": "Medium: 6 X Standard_L8as_v3",
                                                                        "value": "Medium"
                                                                  },
                                                                  {
                                                                        "label": "Medium: 12 X Standard_L64s_v3",
                                                                        "value": "Medium"
                                                                  },
                                                                  {
                                                                        "label": "Medium: 24 X Standard_L64as_v3",
                                                                        "value": "Medium"
                                                                  }
                                                                ],
                                                                "required": true
                                                          }
                                                },
						{
							"name": "nrAppVms",
							"type": "Microsoft.Common.DropDown",
							"label": "Nr of Application VMS",
							"multiselect": false,
							"multiLine": false,
							"constraints": {
								"allowedValues": [
								  {
									"label": "1",
									"value": "1"
								  },
								  {
									"label": "2",
									"value": "2"
								  },
								  {
									"label": "3",
									"value": "3"
								  }
								],
								"required": true
							  }
						},
						{
							"name": "nrMediaVms",
							"type": "Microsoft.Common.DropDown",
							"label": "Nr of Media VMS",
							"multiselect": false,
							"multiLine": false,
							"constraints": {
								"allowedValues": [
								  {
									"label": "3",
									"value": "3"
								  },
								  {
									"label": "5",
									"value": "5"
								  },
								  {
									"label": "7",
									"value": "7"
								  },
								  {
									"label": "9",
									"value": "9"
								  },
								  {
									"label": "11",
									"value": "11"
								  },
								  {
									"label": "13",
									"value": "13"
								  },
								  {
									"label": "15",
									"value": "15"
								  },
								  {
									"label": "17",
									"value": "17"
								  }
								],
								"required": true
							  }

						}

					]
				}
			]
		},
		"outputs": {
			"parameters": {
				"adminPassword": "[steps('basics').adminPassword]",
				"tenant_token": "[steps('basics').tenant_token]",
				"nrAppVms": "[steps('basics').nrAppVms]",
				"nrMediaVms": "[steps('basics').nrMediaVms]",
				"deployBastion": "[steps('basics').deployBastion]",
				"deploySize": "[steps('basics').deploySize]",
				"location": "[steps('basics').resourceScope.location.name]"
			},
			"kind": "ResourceGroup",
			"location": "[steps('basics').resourceScope.location.name]",
			"resourceGroupId": "[steps('basics').resourceScope.resourceGroup.id]"		
		}
	}
}
